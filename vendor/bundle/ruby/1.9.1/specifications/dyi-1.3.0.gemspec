# -*- encoding: utf-8 -*-

Gem::Specification.new do |s|
  s.name = "dyi"
  s.version = "1.3.0"

  s.required_rubygems_version = Gem::Requirement.new(">= 0") if s.respond_to? :required_rubygems_version=
  s.authors = ["Mamoru Yuo"]
  s.date = "2012-06-01"
  s.description = "    DYI is a 2D graphics library, very rich and expressive.\n    DYI have been optimized for SVG format, but it is also possible\n    to output other format; for example, EPS.\n"
  s.email = "dyi_support@sound-f.jp"
  s.homepage = "https://sourceforge.net/projects/dyi/"
  s.licenses = ["GPL-3"]
  s.require_paths = ["lib"]
  s.required_ruby_version = Gem::Requirement.new(">= 1.8.7")
  s.rubygems_version = "2.0.3"
  s.summary = "2D graphics library"
end
