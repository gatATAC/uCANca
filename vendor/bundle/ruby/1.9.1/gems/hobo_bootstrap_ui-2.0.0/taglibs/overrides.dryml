<!-- implements `<search-results-container>` for hobo-rapid with `<modal>` -->
<def tag="search-results-container" attrs="title">
  <modal title="&title" param="default" data-show="1" id="search-results-box">
    <search-results/>
  </modal>
</def>

<!-- alias `<name-one>` to `<name-one-bootstrap>` -->
<def tag="name-one">
  <name-one-bootstrap merge/>
</def>

<!-- use bootstrap-datepicker for date inputs. To switch back to vanilla Rails (`<datepicker-rails>`) add to your application.dryml:

    <def tag="input" for="Date">
      <datepicker-rails merge/>
    </def>
-->
<def tag="input" for="Date">
  <bootstrap-datepicker merge />
</def>
